<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.refiral.nomnom.activity.LoginActivity">

    <include
        android:id="@+id/tb_login"
        layout="@layout/layout_toolbar" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_login_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tb_login"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/light_blue_rectangle"
        android:hint="@string/enter_number"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:padding="10dp"
        android:singleLine="true"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:textSize="20sp" />


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_login"
        style="@style/BigBlueButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="false"
        android:layout_below="@id/et_login_number"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/login"
        android:textSize="20sp" />

    <ProgressBar
        android:id="@+id/pb_login"
        style="?android:attr/progressBarStyleLargeInverse"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:visibility="gone" />


</RelativeLayout>
